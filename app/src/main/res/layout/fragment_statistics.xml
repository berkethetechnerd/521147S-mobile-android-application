<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/pie_tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginXL"
        android:gravity="center"
        android:textSize="@dimen/todayTextSize" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/marginXL"
        android:layout_marginEnd="@dimen/marginXL"
        android:layout_marginStart="@dimen/marginXL"
        android:layout_marginBottom="@dimen/marginXXL"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/statisticsDescription" />

</LinearLayout>