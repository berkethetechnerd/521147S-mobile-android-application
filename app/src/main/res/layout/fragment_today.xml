<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rowCount="4"
        android:columnCount="1">

        <TextView
            android:id="@+id/nextPillsTextView"
            android:layout_marginTop="@dimen/marginM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/nextPill"
            android:textAlignment="center"
            android:textSize="@dimen/todayTextSize"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/NextPillRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:id="@+id/alreadyTakenPillsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/alreadyTakenPills"
            android:textAlignment="center"
            android:textSize="@dimen/todayTextSize"
            android:textStyle="bold"
            android:layout_row="2"
            android:layout_column="0" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/AlreadyTakenRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_row="3"
            android:layout_column="0" />


